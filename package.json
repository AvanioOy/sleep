{
    "name": "@avanio/sleep",
    "version": "0.0.1",
    "description": "Sleep promise with Abort Controller support",
    "main": "./dist/index.js",
    "scripts": {
        "build": "tsc",
        "prepublishOnly": "npm run build",
        "test": "mocha",
        "coverage": "nyc mocha"
    },
    "mocha": {
        "exit": true,
        "extension": [
            "ts",
            "js"
        ],
        "recursive": true,
        "enable-source-maps": true,
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "reporters": [
            "spec",
            "mocha-junit-reporter"
        ]
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "include": [
            "src"
        ],
        "reporter": [
            "text",
            "lcovonly"
        ],
        "all": true,
        "require": [
            "ts-node/register"
        ]
    },
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AvanioOy/sleep.git"
    },
    "keywords": [
        "sleep",
        "abortcontroller"
    ],
    "author": "mharj",
    "license": "LGPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/AvanioOy/sleep/issues"
    },
    "homepage": "https://github.com/AvanioOy/sleep#readme",
    "devDependencies": {
        "@types/chai": "^4.3.3",
        "@types/chai-as-promised": "^7.1.5",
        "@types/mocha": "^10.0.0",
        "@types/node": "^18.11.5",
        "@typescript-eslint/eslint-plugin": "^5.41.0",
        "chai": "^4.3.6",
        "chai-as-promised": "^7.1.1",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-sonarjs": "^0.16.0",
        "mocha": "^10.1.0",
        "node-abort-controller": "^3.0.1",
        "nyc": "^15.1.0",
        "prettier": "^2.7.1",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    }
}