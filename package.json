{
    "name": "@avanio/sleep",
    "version": "0.0.3",
    "description": "Sleep promise with Abort support",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "require": "./dist/index.js",
        "import": "./dist/index.mjs",
        "types": "./dist/index.d.ts"
      }
    },
    "scripts": {
        "build": "tsup src/index.ts --sourcemap --format cjs,esm --dts --clean",
        "validate": "tsc --noEmit --project tsconfig.test.json",
        "prepublishOnly": "npm run build",
        "test": "mocha",
        "coverage": "nyc mocha",
        "lint": "eslint . --ext .ts"
    },
    "mocha": {
        "exit": true,
        "extension": [
            "ts",
            "js"
        ],
        "recursive": true,
        "enable-source-maps": true,
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "reporters": [
            "spec",
            "mocha-junit-reporter"
        ]
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "include": [
            "src"
        ],
        "reporter": [
            "text",
            "lcovonly"
        ],
        "all": true,
        "require": [
            "ts-node/register"
        ]
    },
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AvanioOy/sleep.git"
    },
    "keywords": [
        "sleep",
        "abortcontroller"
    ],
    "author": "mharj",
    "license": "LGPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/AvanioOy/sleep/issues"
    },
    "homepage": "https://github.com/AvanioOy/sleep#readme",
    "devDependencies": {
        "@stylistic/eslint-plugin": "^2.6.1",
        "@types/chai": "^4.3.17",
        "@types/chai-as-promised": "^7.1.8",
        "@types/mocha": "^10.0.7",
        "@types/node": "^18.19.43",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "chai": "^4.5.0",
        "chai-as-promised": "^7.1.2",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-deprecation": "^3.0.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-sonarjs": "^0.23.0",
        "mocha": "^10.7.0",
        "nyc": "^17.0.0",
        "prettier": "^3.3.3",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.9.2",
        "tsup": "^8.2.4",
        "typescript": "^5.5.4"
    }
}
